<!DOCTYPE html>
<html>
<head>
    <%- include('./partials/head') %>
    <title>Add Blog</title>
</head>

<body>
    <%- include('./partials/nav') %>
    <div class="container">
        <form action="/blog/" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="coverImageUrl" class="form-label">Cover Image</label>
                <input type="file" name="coverImageUrl" class="form-control" id="coverImageUrl" aria-describedby="blogcoverImageUrl">
            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="title" class="form-control" id="title" aria-describedby="blogtitle">
            </div>
            <div class="mb-3">
                <label for="body" class="form-label">Body</label>
                <textarea type="text" name="body" class="form-control" id="body" aria-describedby="blogbody"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
    <%- include('./partials/script') %>
</body>
